#:kivy 2.3.1
<StickFigure>:
    # TorsoHead combines head and torso, defined by shoulder and pelvis points
    TorsoHead:
        id: torso_head
        shoulder_pos: root.shoulder_pos2d
        pelvis_pos: root.pelvis_pos2d
        head_image: root.head_image
        head_size: (root.width + root.height) // 30
    
    # Left arm - origin at shoulder
    Limb2Link:
        id: left_arm
        a1: root.height * 0.14
        a2: root.height * 0.12
        theta: 10
        origin_pos: root.shoulder_pos2d
        theta_origin: 250

    # Right arm - origin at shoulder
    Limb2Link:
        id: right_arm
        a1: root.height * 0.14
        a2: root.height * 0.12
        theta: -10
        origin_pos: root.shoulder_pos2d
        theta_origin: 290
    
    # Left leg - origin at pelvis
    Limb2Link:
        id: left_leg
        a1: root.height * 0.15
        a2: root.height * 0.14
        theta: -10
        origin_pos: root.pelvis_pos2d
        theta_origin: 280

    # Right leg - origin at pelvis
    Limb2Link:
        id: right_leg
        a1: root.height * 0.15
        a2: root.height * 0.14
        theta: 10
        origin_pos: root.pelvis_pos2d
        theta_origin: 260

