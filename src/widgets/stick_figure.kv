#:kivy 2.3.1
<StickFigure>:
    # TorsoHead combines head and torso, defined by shoulder and pelvis points
    TorsoHead:
        id: torso_head
        shoulder_pos: root.shoulder_pos2d
        pelvis_pos: root.pelvis_pos2d
        head_image: root.head_image
        head_size: (root.width + root.height) // 30
    
    # Left arm - origin at shoulder
    Limb2Link:
        id: left_arm

    # Right arm - origin at shoulder
    Limb2Link:
        id: right_arm
    
    # Left leg - origin at pelvis
    Limb2Link:
        id: left_leg

    # Right leg - origin at pelvis
    Limb2Link:
        id: right_leg


