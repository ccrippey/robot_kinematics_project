#:kivy 2.3.1

<Figure2D>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 8

        BoxLayout:
            size_hint_y: None
            height: '42dp'
            spacing: 10
            Label:
                text: 'Viewing Angle:'
                color: 0,0,0,1
                size_hint_x: None
                width: '100dp'
            Spinner:
                text: str(root.projection_mode)
                values: ["-90", "-45","0", "45", "90"]
                size_hint_x: None
                width: '140dp'
                on_text: root.projection_mode = float(self.text)

        # Canvas / effector area
        RelativeLayout:
            
            # End effectors for hands
            EndEffector:
                id: hand_left
                pos: 100, 300
                color: (0, 1, 0, 1)
                projection_mode: root.projection_mode
            
            EndEffector:
                id: hand_right
                pos: 200, 300
                color: (1, 0, 0, 1)
                projection_mode: root.projection_mode
            
            # End effectors for feet
            EndEffector:
                id: foot_left
                pos: 100, 100
                color: (0, 0, 1, 1)
                projection_mode: root.projection_mode
            
            EndEffector:
                id: foot_right
                pos: 200, 100
                color: (1, 1, 0, 1)
                projection_mode: root.projection_mode
            
            # End effector for shoulder
            EndEffector:
                id: shoulder
                pos: 150, 280
                color: (1, 0, 1, 1)
                projection_mode: root.projection_mode
            
            # End effector for pelvis
            EndEffector:
                id: pelvis
                pos: 150, 130
                color: (0, 1, 1, 1)
                projection_mode: root.projection_mode
            
            StickFigure:
                id: sticky1
