#:kivy 2.3.1

<Figure2D>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 8

        BoxLayout:
            size_hint_y: None
            height: '42dp'
            spacing: 10
            Label:
                text: 'Viewing Angle:'
                color: 0,0,0,1
                size_hint_x: None
                width: '100dp'
            Spinner:
                text: str(root.projection_mode)
                values: ["-90", "-45","0", "45", "90"]
                size_hint_x: None
                width: '140dp'
                on_text: root.projection_mode = float(self.text)

        # Canvas / effector area with PoseEditor
        PoseEditor:
            id: pose_editor

